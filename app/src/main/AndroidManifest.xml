<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.hosiluan.usermanager">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_home"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_about"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId"
                   android:value="@string/facebook_app_id"/>

        <provider android:authorities="com.facebook.app.FacebookContentProvider706041109594544"
                  android:name="com.facebook.FacebookContentProvider"
                  android:exported="true"/>


        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".HomeActivity">
        </activity>
        <activity android:name=".NewUserActivity">
        </activity>
        <activity android:name=".ListUserActivity">
        </activity>
        <activity android:name=".UserInfoActivity">
        </activity>
        <activity android:name=".CompanyWebViewActivity">
        </activity>
        <activity android:name=".TutorialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ShowDialogActivity">

        </activity>
        <activity android:name=".SocialNetworkActivity">

        </activity>

        <service
            android:name=".firebase.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".firebase.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>